<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
               id="WebApp_ID" version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <!-- Default page to serve -->
  <display-name>GWTwithHibernate</display-name>
  <welcome-file-list>
    <welcome-file>GWTwithHibernate.html</welcome-file>
  </welcome-file-list>
  
    <servlet>
  <servlet-name>MyHBNConn</servlet-name>
  <servlet-class>
    org.gwt.hibernate.server.MyHBNConn
  </servlet-class>
  
</servlet>
<servlet-mapping>
  <servlet-name>MyHBNConn</servlet-name>
  <url-pattern>/gwtwithhibernate/MyHBNConn</url-pattern>
</servlet-mapping>

</web-app>
